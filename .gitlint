# Git commit message linting configuration
# Based on conventional commits specification

[general]
# Ignore commits that don't match the regex
ignore-merge-commits=true
ignore-revert-commits=true
ignore-fixup-commits=true
ignore-squash-commits=true

[title-max-length]
line-length=72

[title-match-regex]
regex=^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,}$

[body-max-line-length]
line-length=100

[body-min-length]
min-length=0

[body-is-missing]
# Allow missing body
ignore=true

[author-valid-email]
regex=[^@]+@[^@]+\.[^@]+